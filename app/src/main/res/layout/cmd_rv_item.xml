<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="2dp"
    android:padding="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="5dp"
        android:paddingHorizontal="1dp"


        >

        <TextView
            android:id="@+id/Uuser_name_visite_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/exo"
            android:text="Foulen Ben Foulen"
            android:textColor="@color/se_con_col"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/zone_items_icon"
            app:layout_constraintBottom_toBottomOf="@id/zone_Tv"
            app:layout_constraintEnd_toStartOf="@+id/zone_Tv"
            app:layout_constraintTop_toTopOf="@+id/zone_Tv"
            app:layout_constraintVertical_bias="0.6" />


        <TextView
            android:id="@+id/type_visite_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/exo"
            android:text="Visite de rÃ©activiation"
            android:textColor="@color/se_con_col"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Uuser_name_visite_Tv" />


        <TextView
            android:id="@+id/zone_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/exo"
            android:text="Zone A"
            android:textColor="@color/blue_reset_password"
            app:layout_constraintBottom_toBottomOf="@id/type_visite_Tv"
            app:layout_constraintEnd_toEndOf="parent"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>