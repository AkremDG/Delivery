<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12sp"
    >


    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"

        app:layout_constraintTop_toBottomOf="@id/regionName_tv" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clientName_tv"
        android:id="@+id/clientIv"
        app:layout_constraintBottom_toBottomOf="@+id/statusClient_tv"
        android:src="@drawable/iconperson"
        />

    <TextView
        android:id="@+id/clientName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo"
        android:textSize="16sp"
        android:text="Foulen Ben Foulen"
        android:textColor="@color/se_con_col"
        android:layout_marginLeft="10dp"

        app:layout_constraintStart_toEndOf="@+id/clientIv"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/statusClient_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/exo"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="Client indisponible"
        android:textColor="@color/se_con_col"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/clientIv"
        app:layout_constraintTop_toBottomOf="@+id/clientName_tv" />







    <TextView
        android:id="@+id/regionName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/exo"
        android:textSize="14sp"
        android:text="Tunis"


        app:layout_constraintStart_toStartOf="@id/statusClient_tv"
        app:layout_constraintTop_toBottomOf="@id/statusClient_tv"
        android:textColor="@color/orange_btn_color"
        />

    <ImageView
        android:id="@+id/commanderIv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/baseline_add_shopping_cart_24_orange"
        app:layout_constraintTop_toTopOf="@id/clientName_tv"

        app:layout_constraintBottom_toBottomOf="@id/statusClient_tv"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>